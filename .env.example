# Server Configuration
PORT=3000
NODE_ENV=development

# Webhook Security
WEBHOOK_SECRET=our_webhook_secret_key_here
WEBHOOK_TIMESTAMP_TOLERANCE=300000

# Logging
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
ALLOWED_ORIGINS=https://yayawallet.com,https://api.yayawallet.com

# Trusted IPs (YaYa Wallet IP addresses for example)
TRUSTED_IPS=127.0.0.1,::1,10.220.194.53
